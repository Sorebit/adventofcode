# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
#
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{py,go}]
indent_size = 4
trim_trailing_whitespace = true

[*.{md,markdown}]
trim_trailing_whitespace = false

